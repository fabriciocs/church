<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Endereco.
    -->
    <changeSet id="20170117022806-1" author="jhipster">
        <createTable tableName="endereco">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="descricao" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="logradouro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="numero" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            
            <column name="complemento" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="bairro" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="cep" type="varchar(8)">
                <constraints nullable="false" />
            </column>
            
            <column name="cidade_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="endereco_telefones">
            <column name="telefones_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="enderecos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="enderecos_id, telefones_id" tableName="endereco_telefones"/>
        
    </changeSet>
</databaseChangeLog>
